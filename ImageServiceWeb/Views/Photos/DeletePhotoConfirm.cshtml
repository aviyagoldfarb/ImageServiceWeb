
@{
    ViewBag.Title = "DeletePhotoConfirm";
}

<h1>Confirm</h1>
<h2>Delete @ViewBag.PhotoName ?</h2>
<h3>Are you sure you want to delete @ViewBag.PhotoName ?</h3>
<img src="@ViewBag.RelativeThumbnailPath" alt="" class="img-rounded" width="200" height="150">
<br />
<br />
<p>
    <a href="@Url.Action("DeletePhoto", new { fullSizePath = @ViewBag.FullSizePath, thumbnailPath = @ViewBag.ThumbnailPath })" class="btn btn-info btn-xs" id="viewButton" role="button">Delete</a>
    <a href="@Url.Action("Photos")" class="btn btn-danger btn-xs" role="button">Cancel</a>
</p>
