@model ImageServiceWeb.Models.PhotosModel
@{
    ViewBag.Title = "Photos";
}

<h2>Photos</h2>
<br/>
    <div class="container" id="tourpackages-carousel">
        <div class="row">
            @foreach (var photo in Model.PhotosInformation)
            {
                <div class="col-xs-18 col-sm-6 col-md-3">
                    <div class="thumbnail">
                        <img src="@photo.RelativeThumbnailPath" alt="" class="img-circle" width="200" height="150">
                        <div class="caption">
                            <h4>@photo.PhotoName</h4>
                            <p>@photo.PhotoDate</p>
                            <p>
                                <a href="@Url.Action("ViewPhoto", new { thumbnailPath = @photo.ThumbnailPath, fullSizePath = @photo.FullSizePath, relativeThumbnailPath = @photo.RelativeThumbnailPath, relativePath = @photo.RelativePath, photoName = @photo.PhotoName, photoDate = @photo.PhotoDate})" id="btnView" class="btn btn-info btn-xs" role="button">View</a>
                                <a href="@Url.Action("DeletePhotoConfirm", new { thumbnailPath = @photo.ThumbnailPath, fullSizePath = @photo.FullSizePath, relativeThumbnailPath = @photo.RelativeThumbnailPath, relativePath = @photo.RelativePath, photoName = @photo.PhotoName, photoDate = @photo.PhotoDate })" id="btnDelete" class="btn btn-danger btn-xs" role="button">Delete</a>
                            </p>                        
                        </div>
                    </div>
                </div>
            }
        </div><!-- End row -->
    </div><!-- End container -->
